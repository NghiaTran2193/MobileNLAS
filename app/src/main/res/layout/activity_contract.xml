<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/contract"
    tools:context=".activity.ContractActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarLienhe"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple"
        app:title="Liên hệ"
        app:titleTextColor="#ffffff"/>
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Liên hệ với chúng tôi"
            android:textStyle="bold"
            android:textColor="#020202" />
        <LinearLayout
            android:padding="10dp"
            android:background="@drawable/boder"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/manager"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:textColor="#020202"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Giám đốc: Bùi Quốc Việt Anh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:background="@drawable/boder"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/email"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:textColor="#020202"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Email: actvn@edu.com"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:background="@drawable/boder"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:id="@+id/lnCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/phonecall"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:textColor="#020202"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Điện thoại: 0886085585"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>